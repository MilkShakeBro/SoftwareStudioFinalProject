    <RelativeLayout
        android:id="@+id/screenshot_layout"
        android:layout_width="1023px"
        android:layout_height="2133px"
        android:layout_marginBottom="100px">

        <ImageView
            android:id="@+id/screenshot_image"
            android:layout_width="1023px"
            android:layout_height="2133px"
            android:layout_marginLeft="0px"
            android:layout_marginTop="0px"
            android:scaleType="centerCrop"
            android:src="@drawable/screehshot_background" />

        <ImageView
            android:id="@+id/trophy_image"
            android:layout_width="839px"
            android:layout_height="611px"
            android:layout_marginLeft="93px"
            android:layout_marginTop="130px"
            android:scaleType="centerCrop"
            android:src="@drawable/trophy_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="1023px"
            android:layout_height="173px"
            android:layout_marginTop="750px"
            android:gravity="center"
            android:text="CHAMPION"
            android:textColor="@color/game_score_text_gold"
            android:textSize="96px"
            android:textStyle="bold"
            android:fontFamily="@font/arial1"/>

        <TextView
            android:id="@+id/player_name"
            android:layout_width="1023px"
            android:layout_height="173px"
            android:layout_marginTop="923px"
            android:gravity="center"
            android:text="Chris Chen"
            android:textColor="@color/game_score_text_gold"
            android:textSize="96px"
            android:fontFamily="@font/arial1"/>

        <TextView
            android:id="@+id/score_title"
            android:layout_width="1023px"
            android:layout_height="87px"
            android:layout_marginTop="1150px"
            android:gravity="center"
            android:text="SCORE"
            android:textColor="@color/game_score_text_gold"
            android:textSize="72px"
            android:textStyle="bold"
            android:fontFamily="@font/arial1"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="1023px"
            android:layout_height="350px"
            android:layout_marginTop="1200px"
            android:gravity="center"
            android:text="726"
            android:textColor="@color/game_score_text_gold"
            android:textSize="264px"
            android:textStyle="bold"
            android:fontFamily="@font/arial1"/>

        <TextView
            android:id="@+id/tag_text"
            android:layout_width="839px"
            android:layout_height="270px"
            android:layout_marginLeft="92px"
            android:layout_marginTop="1625px"
            android:fontFamily="sans-serif-light"
            android:text="#King of monograms #King of speed #King of vocabularies #Game2Mem #Defeat all the players"
            android:textColor="@color/game_score_tag_gold"
            android:textSize="42px"
            android:textStyle="normal"
            />

        <ImageView
            android:id="@+id/trademark_image"
            android:layout_width="1023px"
            android:layout_height="150px"
            android:scaleType="fitCenter"
            android:src="@drawable/trademark_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1923px"/>

    </RelativeLayout>
</layout>