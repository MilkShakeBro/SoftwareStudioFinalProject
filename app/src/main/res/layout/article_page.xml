<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_article">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/Article"
                style="@style/ProfileTheme"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/question_one"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Article_content"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/correct_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/Question_one"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioGroup
                android:id="@+id/Answer_one_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:checkedButton="@string/answer_one_A"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Question_one">

                <RadioButton
                    android:id="@+id/Answer_one_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_one_A" />

                <RadioButton
                    android:id="@+id/Answer_one_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_one_B" />

                <RadioButton
                    android:id="@+id/Answer_one_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_one_C" />

                <RadioButton
                    android:id="@+id/Answer_one_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_one_D" />
            </RadioGroup>

            <TextView
                android:id="@+id/Question_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/question_two"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Answer_one_group"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/correct_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/Question_two"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioGroup
                android:id="@+id/Answer_two_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@string/answer_two_A"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginHorizontal="32dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Question_two">

                <RadioButton
                    android:id="@+id/Answer_two_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_two_A" />

                <RadioButton
                    android:id="@+id/Answer_two_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_two_B" />

                <RadioButton
                    android:id="@+id/Answer_two_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_two_C" />

                <RadioButton
                    android:id="@+id/Answer_two_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_two_D" />
            </RadioGroup>

            <TextView
                android:id="@+id/Question_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/question_three"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Answer_two_group"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/correct_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/Question_three"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioGroup
                android:id="@+id/Answer_three_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:checkedButton="@string/answer_three_A"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Question_three">

                <RadioButton
                    android:id="@+id/Answer_three_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_three_A" />

                <RadioButton
                    android:id="@+id/Answer_three_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_three_B" />

                <RadioButton
                    android:id="@+id/Answer_three_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_three_C" />

                <RadioButton
                    android:id="@+id/Answer_three_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_three_D" />
            </RadioGroup>

            <TextView
                android:id="@+id/Question_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/question_four"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Answer_three_group"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/correct_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/Question_four"
                app:layout_constraintStart_toStartOf="parent" />
            <RadioGroup
                android:id="@+id/Answer_four_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:checkedButton="@string/answer_four_A"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Question_four">

                <RadioButton
                    android:id="@+id/Answer_four_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_four_A" />

                <RadioButton
                    android:id="@+id/Answer_four_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_four_B" />

                <RadioButton
                    android:id="@+id/Answer_four_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_four_C" />

                <RadioButton
                    android:id="@+id/Answer_four_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="@string/answer_four_D" />
            </RadioGroup>

            <TextView
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:visibility="invisible"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/Answer_four_group"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_marginStart="220dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/Answer_four_group"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="20dp"
                android:text="@string/Button_submit"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Answer_four_group" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    </FrameLayout>
</layout>