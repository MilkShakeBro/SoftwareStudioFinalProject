<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/DarkTheme"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Dark Theme"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DarkTheme"/>


        <Switch
            android:id="@+id/Sound"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Sound"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1"
            />

        <View
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Sound"/>

        <Switch
            android:id="@+id/Vibrate"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Vibrate"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Vibrate"/>

        <Switch
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Password"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            />

        <View
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password"/>

        <Switch
            android:id="@+id/Notification"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Notification"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line4" />

        <View
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Notification"/>

        <Switch
            android:id="@+id/Private"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Private"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line5" />

        <View
            android:id="@+id/line6"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Private"/>

        <Switch
            android:id="@+id/BackUp"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp"
            android:text="Back Up"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line6"/>

        <View
            android:id="@+id/line7"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/game_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/BackUp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>