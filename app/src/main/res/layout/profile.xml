<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chris_pic"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="55dp"
            android:text="Chris"
            android:textSize="30dp"
            android:textStyle="bold"
            style="@style/ProfileTheme"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent"
             />

        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/Vocabularies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Vocabularies"
            android:textSize="20dp"
            android:textStyle="bold"
            style="@style/ProfileTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image" />

        <TextView
            android:id="@+id/Achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Achievement"
            android:textSize="25dp"
            android:textStyle="bold"
            style="@style/ProfileTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar"

            />


        <LinearLayout
            android:id="@+id/vertical_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/Achievement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:id="@+id/horizontal_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/achievement_button1"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement1" />

                <ImageButton
                    android:id="@+id/achievement_button2"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement2" />

                <ImageButton
                    android:id="@+id/achievement_button3"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement3"/>

                <ImageButton
                    android:id="@+id/achievement_button4"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontal_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/achievement_button5"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement5" />

                <ImageButton
                    android:id="@+id/achievement_button6"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement6" />

                <ImageButton
                    android:id="@+id/achievement_button7"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement7" />

                <ImageButton
                    android:id="@+id/achievement_button8"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontal_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/achievement_button9"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement9" />

                <ImageButton
                    android:id="@+id/achievement_button10"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement10" />

                <ImageButton
                    android:id="@+id/achievement_button11"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement11"/>

                <ImageButton
                    android:id="@+id/achievement_button12"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/horizontal_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/achievement_button13"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement13" />

                <ImageButton
                    android:id="@+id/achievement_button14"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement14" />

                <ImageButton
                    android:id="@+id/achievement_button15"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement15" />

                <ImageButton
                    android:id="@+id/achievement_button16"
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/achievement16" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Vocabularies"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="100dp"
            android:progressDrawable="@drawable/custom_progress_bg"/>

        <ProgressBar
            android:id="@+id/progressBar_dark"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Vocabularies"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="170dp"
            android:progressDrawable="@drawable/custom_progress_dark"/>

        <TextView
            android:id="@+id/Vocabulary_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="374/500"
            android:textSize="20dp"
            android:textStyle="bold"
            style="@style/ProfileTheme"
            app:layout_constraintStart_toEndOf="@id/progressBar"
            app:layout_constraintTop_toBottomOf="@id/Vocabularies" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>