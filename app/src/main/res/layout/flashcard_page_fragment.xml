<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/flashcard_page_background">
        <TextView
            android:id="@+id/countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceHeadline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/poohpoohman1"
            tools:text="00:00:00" />

        <ImageView
            android:id="@+id/poohpoohman1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toTopOf="@+id/flashcard_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countdown_timer"
            app:srcCompat="@drawable/poopooman" />

        <FrameLayout
            android:id="@+id/cardFront"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poohpoohman1">
            <include layout="@layout/card_front" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardBack"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:alpha="0"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poohpoohman1">
            <include layout="@layout/card_back" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>